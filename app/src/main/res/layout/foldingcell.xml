<?xml version="1.0" encoding="utf-8"?>
<!-- Introducing Folding-Container -->
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal|center_vertical"
    android:layout_marginTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">
        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/homeboxbg"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/tlsnms"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schulname"
                        style="@style/caption1"
                        android:gravity="left"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Ort"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        android:drawableLeft="@drawable/location"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/downarrowdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/downarrow"
                    app:tint="@color/white"
                    android:layout_marginTop="35dp"
                    android:rotation="180"/>
            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/homeboxbg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/tlsnms"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schulname"
                        style="@style/caption1"
                        android:id="@+id/schoolname_fc"
                        android:gravity="left"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Ort"
                        android:textColor="@color/white"
                        android:drawableTint="@color/white"
                        android:drawableLeft="@drawable/location"
                        android:id="@+id/location_fc"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/downarrow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/downarrow"
                    app:tint="@color/white"
                    android:layout_marginTop="35dp"/>
            </LinearLayout>
        </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>
</LinearLayout>